%h1 Listing users
%table
  %tr
    %th Name
    %th Uid
    %th Email
    %th Admin
    %th
    %th
    %th
  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.uid
      %td= user.email
      %td= user.admin
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
