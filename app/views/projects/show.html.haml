-#= button_to 'Add Moderators'
= button_to 'Delete Project', @project, method: :delete, data: { confirm: 'Are you sure?' }

%h1 Listing submissions for #{@project.name}
%table
  %tr
    %th Title
    %th Submit Time
    %th Submitter
    %th Like
    %th Download
    %th
  - @submissions.each do |submission|
    %tr
      %td= submission.title
      %td= submission.created_at
      %td= 'submitter'
      - if submission.like
        %td= check_box_tag "#{submission.id}", like_path(@project, submission), :checked => true
      - else
        %td= check_box_tag "#{submission.id}]", like_path(@project, submission)
      %td= link_to 'Download', download_path(project_id: @project.id, id: submission.id), :target => "_blank"
%br/

:javascript
  $(document).ready(function() {
    $(":checkbox").click(function() {
      $.post(this.value, {"checked": this.checked});
      });
      
  });

