
.container-full
  .row
    .col-lg-12.text-center.v-center
      -#= button_to 'Add Moderators'

      %h1 #{@project.name}
      %p= @project.desc
      = button_to 'Delete Project', @project, method: :delete, data: { confirm: 'Are you sure?' }
      %table{:class=>"table table-hover table-condensed"}
        %tr{:class => "text-left left-pad"}
          %th Title
          %th Submit Time
          %th Submitter
          %th Like
          %th Download
        - @submissions.each do |submission|
          %tr{:class => "text-left left-pad"}
            %td= submission.title
            %td= submission.created_at
            %td= 'submitter'
            - if submission.like
              %td= check_box_tag "#{submission.id}", like_path(@project, submission), :checked => true
            - else
              %td= check_box_tag "#{submission.id}", like_path(@project, submission)
            %td= link_to 'Download', download_path(project_id: @project.id, id: submission.id), :target => "_blank", :id => "download_#{submission.id}", :class =>"btn-default btn btn-primary"
  %br/

:javascript
  $(document).ready(function() {
    $(":checkbox").click(function() {
      $.post(this.value, {"checked": this.checked});
      });
      
  });


