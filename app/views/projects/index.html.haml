%h1 All Projects

- #authcas stuff
= "Hi, " + @username #add a before filter to get username from calnet
= link_to 'Logout', logout_path

%table#projects
  %thead
    %tr
      %th{:class => session[:title_sort] ? 'hilite' : nil}= link_to "Project Name", projects_path(:title_sort => true, :id => "project_name")
      %th= "Project Description"
  %tbody
    - @projects.each do |project|
      %tr
        %td= link_to "#{project.title}", project_path(project)
        %td= project.description

= link_to 'Add Project', new_project_path 

