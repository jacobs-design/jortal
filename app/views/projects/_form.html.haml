.form-box.center-block
  = form_for(@project) do |f|
    - if @project.errors.any?
      %h4.error_msg Fill out all the fields!
    .form-group
      = f.text_field :name, :placeholder => 'Project Name', :class => 'form-control input-lg'
    .form-group
      = f.text_area :desc, :placeholder => 'Description', :rows => 5, :class => 'form-control input-lg'
    .actions.form-group
      = f.submit 'Create Project', :class => 'btn btn-primary btn-lg btn-block'
